{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        [
            "@babel/preset-typescript"
        ]
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "."
                ],
                "alias": {
                    "common": "./src/common"
                }
            }
        ],
        [
            "@babel/plugin-transform-typescript"
        ]
    ]
}